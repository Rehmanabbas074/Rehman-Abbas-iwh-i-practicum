doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/css/style.css")
  body
    .container
      h1 Contact Table
      a.add-link(href="/update-cobj") Add/Update this table

      table
        thead
          tr
            th Name
            th Email
            th Phone
        tbody
          if records.length === 0
            tr
              td(colspan="1") No records found
          else
            each item in records
              tr
                td= item.properties.firstname || "—"
                td= item.properties.email || "—"
                td= item.properties.phone || "—"
